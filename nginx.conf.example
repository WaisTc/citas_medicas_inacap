server {
    listen 80;
    server_name 98.93.38.139; # O la IP de tu servidor AWS

    # Redirigir tráfico al servidor de Node.js
    # Opción Recomendada: Servir estáticos con Nginx
    # IMPORTANTE: Reemplaza 'html/citas_medicas_inacap' por el nombre real de la carpeta donde está tu proyecto
    # Si pusiste los archivos sueltos en /usr/share/nginx/, borra 'html/citas_medicas_inacap/'
    
    location /css/ {
        root /usr/share/nginx/html/citas_medicas_inacap/public;
    }
    
    location /js/ {
        root /usr/share/nginx/html/citas_medicas_inacap/public;
    }

    location /imagenes/ {
        root /usr/share/nginx/html/citas_medicas_inacap/public;
    }

    # Todo lo demás (HTML dinámico, API) pasa a Node.js
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}
